= form_for @quiz do |f|
  .columns.large-12.medium-12.small-12
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form"
  %hr/
  %h3
    %strong Questions List
  %div
    = f.fields_for :questions do |question|
      = render 'question_fields', f: question
    .links
      = link_to_add_association('Add More Question', f, :questions, class: 'btn btn-primary mt-3 mb-3')
  = f.submit class: "btn btn-danger"
