<div class="content">
  <div class="media-content">
    <div class="content">
        <h1 class="title is-4">
            <%= @quiz.title %>
        </h1>
        <p class="is-size-7 is-italic"><%= t('posted_on', date: @quiz.created_at) %></p>
    </div>
    <% @quiz.questions.each do |q| %>
        <h1 class="title is-4">
            <%= q.title %>
        </h1>
        <% if question.answers.exists? %>
            <div class="table-container">
                <table class="table is-narrow is-hoverable">
                    <thead>
                        <tr>
                            <th>Answer</th>
                            <th>User</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @quiz.answers.each do |a| %>
                            <tr>
                                <td><%= a.answer %></td>
                                <td><%= a.user.name %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        <% end %>
    <% end %>